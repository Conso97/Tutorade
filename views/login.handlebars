<div class="row">
  <div class="col-md-6">
    <form class="form login-form">
       <h2>Login</h2>
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="email" required="required"name="email-login" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input required="required" class="form-input" type="password" name="password-login" minlength="8" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <form class="form signup-form">
          <h2>Signup</h2>
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" minlength="2" required="required" type="text" name="name-signup" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="email" required="required" name="email-signup" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input required="required" class="form-input" type="password" name="password-signup"  minlength="8" id="password-signup" />
      </div>


      <label for="language-select">Choose a language:</label>
      <select class="form-input" name="language_id" id="language-signup">
        <option value="">--Please choose an language--</option>

        {{#each languages as |language|}}
        <option value="{{ language.language_id }}">{{ language.title }}</option>
        {{/each}}

      </select>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
  </div>

  <div class="form-group">
    </form>
  </div>
</div>

<script src="./js/login.js"></script>