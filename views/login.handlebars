<div class="row">
  <div class="col-md-6">
    <h2 id="log-in">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">User Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">User Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" href="/login">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>SignUp</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Full Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email Address:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Create Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">SignUp</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>