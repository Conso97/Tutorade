<div class="row">
  <div class="col-md-6">
    <form class="form login-form">
      <h2>Login</h2>
      <div class="col-auto">
        <label for="email-login" class="form-label">Email:</label>
        <input class="form-control" type="email" required="required" name="email-login" id="email-login" />
      </div>
      <div class="col-auto">
        <label for="password-login" class="form-label">Password:</label>
        <input required="required" class="form-control" type="password" name="password-login" minlength="8"
          id="password-login" />
      </div>
      <br>
      <div class="col-auto" >
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <form class="form signup-form">
      <h2>Signup</h2>
      <div class="col-auto">
        <label for="name-signup" class="form-label">Name:</label>
        <input class="form-control" minlength="2" required="required" type="text" name="name-signup" id="name-signup" />
      </div>
      <div class="col-auto">
        <label for="email-signup" class="form-label">Email:</label>
        <input class="form-control" type="email" required="required" name="email-signup" id="email-signup" />
      </div>
      <div class="col-auto">
        <label for="password-signup" class="form-label">Password:</label>
        <input required="required" class="form-control" type="password" name="password-signup" minlength="8"
          id="password-signup" />
      </div>


      <div class="col-auto">
        <label for="language-select" class="form-label">Choose tutoring language:</label>
        <select class="form-control" name="language_id" id="language-signup">
          <option value="">Choose language</option>

          {{#each languages as |language|}}
          <option value="{{ language.language_id }}">{{ language.title }}</option>
          {{/each}}

        </select>
      </div>
      <br>
      <div class="col-auto">
        <button class="btn btn-primary " type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>