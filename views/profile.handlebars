<div class="row">
  <div class="col-md-6">
    <form class="form language-form">
      <div class="row">
        <div class="col-auto">
          <h2>Welcome, {{name}}!</h2>
        </div>
      </div>
      <div>
        <div class="col-auto">
          <label class="form-label" for="language-select">Programming Language (update the language that you teach here):</label>
          <select class="form-control" name="languages" id="language-select">
            <option value="">--I want to become a student!--</option>
            {{#each languages as |language|}}
            {{#if language.isSelected}}
            <option selected value="{{language.language_id }}">{{ language.title }}</option>
            {{else}}
            <option value="{{ language.language_id }}">{{ language.title }}</option>
            {{/if}}
            {{/each}}
          </select>
        </div>
        
      </div>
      <br>
      <div class="row">
        <div class="col-auto">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </div>

    </form>
  </div>

</div>

